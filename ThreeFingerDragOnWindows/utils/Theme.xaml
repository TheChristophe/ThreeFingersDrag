<win:ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                        xmlns:win="http://schemas.microsoft.com/winfx/2006/xaml/presentation">
    <win:TransitionCollection x:Key="SettingsCardsAnimations">
        <win:EntranceThemeTransition FromVerticalOffset="50" />
        <!--  Animates cards when loaded  -->
        <win:RepositionThemeTransition IsStaggeringEnabled="False" />
        <!--  Smoothly animates individual cards upon whenever Expanders are expanded/collapsed  -->
    </win:TransitionCollection>
</win:ResourceDictionary>